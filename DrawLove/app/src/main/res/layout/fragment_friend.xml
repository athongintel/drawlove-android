<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.immortplanet.drawlove.fragment.FriendFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/friend_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btFriend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTabSelected"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_reader" />

            <ImageButton
                android:id="@+id/btRequest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTabNotSelected"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_users" />

            <ImageButton
                android:id="@+id/btNotification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTabNotSelected"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_mailing_1" />

            <ImageButton
                android:id="@+id/btSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorTabNotSelected"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search_engine" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
